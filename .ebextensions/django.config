container_commands:
  01_chown_sqlitedb:
    command: "cd /opt/python/current/app && sudo chown wsgi db.sqlite3"
    leader_only: true
  02_migrate:
    command: "cd ~ && python manage.py migrate"
    leader_only: true
  03_createsu:
    command: "python manage.py createsu"
    leader_only: true
option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: bom/wsgi.py
